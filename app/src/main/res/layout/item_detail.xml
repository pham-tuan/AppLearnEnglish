<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="40dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_back"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginVertical="42dp"
            android:layout_marginTop="24dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/bee"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_spelling"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_spelling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="@string/bi"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_means"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/con_ong"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_spelling" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_front"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_ImgItem"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="42dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:src="@drawable/bee" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imgsound"
        android:layout_width="62sp"
        android:layout_height="62sp"
        android:layout_marginStart="62dp"
        android:background="@drawable/bg_sound_detail"
        android:elevation="10dp"
        android:padding="4dp"
        android:src="@drawable/volume"
        app:layout_constraintBottom_toBottomOf="@+id/card_front"
        app:layout_constraintStart_toStartOf="@+id/card_front" />


    <CheckBox
        android:id="@+id/like"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:background="@drawable/bg_sound_detail"
        android:layout_marginEnd="62dp"
        android:elevation="10dp"
        android:button="@drawable/custom_check_favor"
        app:layout_constraintBottom_toBottomOf="@+id/card_front"
        app:layout_constraintEnd_toEndOf="@+id/card_front" />


</androidx.constraintlayout.widget.ConstraintLayout>